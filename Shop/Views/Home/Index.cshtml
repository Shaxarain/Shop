@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Магазинчик</title>
</head>
<body>
    <div>
        <h3>Проверка</h3>
        <table>
            <tr>
                <th>Продукт</th>
                <th>Картинка</th>
                <th>Цена</th>
                <th>Кнопочка</th>
            </tr>
            @foreach (var p in ViewBag.Catalog)
            {
                <tr>
                <td>
                    <p>@p.Name</p>
                </td>
                @foreach (var ph in p.ProductProductPhoto)
                {
                    <td>
                        <p>@Html.Raw("<img style='width:100px; height:60px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(ph.ProductPhoto.ThumbNailPhoto) + "\" />")</p>
                    </td>
                }
                <td>
                    <p>@p.StandardCost</p>
                </td>
                <td>
                    <p><input type="submit" formmethod="post" formaction="cart.html" value="Добавить в корзину" /></p>
                </td>
                </tr>
                }
            </table>
        </div>
    </body>
</html>